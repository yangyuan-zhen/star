.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.nav-bar .title-section {
  display: flex;
  align-items: center;
}
.nav-bar .title-section .icon-star {
  color: #6366f1;
  font-size: 40rpx;
  margin-right: 10rpx;
}
.nav-bar .title-section .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
}
.nav-bar .action-section {
  display: flex;
  gap: 30rpx;
}
.nav-bar .action-section .icon-settings {
  font-size: 40rpx;
  color: #666;
}