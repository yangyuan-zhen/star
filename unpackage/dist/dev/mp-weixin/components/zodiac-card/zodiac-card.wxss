.zodiac-card {
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  border-radius: 24rpx;
  overflow: hidden;
  margin: 0 4rpx 40rpx 4rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  width: calc(100% - 8rpx);
  box-sizing: border-box;
}
.zodiac-card .zodiac-header {
  padding: 30rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date .zodiac-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date .zodiac-date {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}
.zodiac-card .zodiac-header .zodiac-fortune {
  margin-bottom: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-fortune .fortune-label {
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}
.zodiac-card .zodiac-header .zodiac-description {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  word-break: break-word;
  white-space: normal;
  text-overflow: initial;
}
.zodiac-card .zodiac-header .tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}
.zodiac-card .zodiac-header .tag-container .tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}
.zodiac-card .zodiac-image-section {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
  background-color: rgba(0, 0, 0, 0.1);
}
.zodiac-card .zodiac-image-section::before {
  content: "";
  position: absolute;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  z-index: 0;
}
.zodiac-card .zodiac-image-section .zodiac-image {
  position: relative;
  z-index: 1;
  width: 100rpx;
  height: 100rpx;
  filter: brightness(0) invert(1);
  opacity: 0.9;
}
.star-rating {
  color: #f59e0b;
  font-size: 36rpx;
  line-height: 1;
}
.star-rating.small {
  font-size: 30rpx;
}
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}
.loading-container .loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
.loading-container .loading-text {
  color: #fff;
  margin-top: 20rpx;
  font-size: 28rpx;
}
@keyframes spin {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}