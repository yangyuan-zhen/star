.translation {
  padding: 20rpx;
}
.translation .input-section .input-area {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
}
.translation .input-section .btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  gap: 20rpx;
}
.translation .input-section .btn-group button {
  flex: 1;
  font-size: 28rpx;
}
.translation .input-section .btn-group button.clear-btn {
  background-color: #f5f5f5;
  color: #666;
}
.translation .input-section .btn-group button.translate-btn {
  background-color: #007aff;
  color: #fff;
}
.translation .result-section {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}
.translation .result-section .result-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}
.translation .result-section .result-content {
  font-size: 30rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
}
.translation .result-section .copy-btn {
  width: 100%;
  font-size: 28rpx;
  background-color: #007aff;
  color: #fff;
}
.translation .loading {
  text-align: center;
  padding: 20rpx;
  color: #666;
}