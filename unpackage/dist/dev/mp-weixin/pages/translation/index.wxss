.translation {
  padding: 16rpx;
  max-width: 900rpx;
  margin: 0 auto;
}
.translation .input-section .input-area {
  width: 100%;
  min-height: 240rpx;
  padding: 16rpx;
  border: 2rpx solid #e5e5ea;
  border-radius: 16rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  transition: all 0.3s ease;
}
.translation .input-section .input-area:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 2rpx rgba(0, 122, 255, 0.1);
}
.translation .input-section .btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  gap: 16rpx;
}
.translation .base-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}
.translation .base-btn:active {
  transform: scale(0.98);
}
.translation .clear-btn {
  flex: 1;
  background-color: #f8f8f8;
  color: #999;
}
.translation .translate-btn {
  flex: 1;
  background-color: #007aff;
  color: #ffffff;
}
.translation .translate-btn:disabled {
  opacity: 0.7;
  cursor: not-allowed;
}
.translation .result-section {
  margin-top: 48rpx;
  background-color: #f0f8ff;
  border-radius: 16rpx;
  border: 2rpx solid #e5e5ea;
  overflow: hidden;
}
.translation .result-section .result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  border-bottom: 2rpx solid #e5e5ea;
  background-color: #f8f8f8;
}
.translation .result-section .result-header .result-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.translation .result-section .result-content {
  padding: 24rpx;
  font-size: 16px;
  line-height: 1.8;
  color: #333;
  border-bottom: 2rpx solid #e5e5ea;
}
.translation .loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 16rpx;
  color: #999;
}
.vocabulary-section {
  padding: 16rpx;
}
.vocabulary-section .category-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}
.vocabulary-section .word-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.vocabulary-section .word-list .word-item {
  padding: 8rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}
.vocabulary-section .word-list .word-item .word-header {
  color: #333;
  font-weight: 500;
  font-size: 30rpx;
  margin-bottom: 16rpx;
}
.vocabulary-section .word-list .word-item .word-explanation {
  color: #999;
  font-size: 26rpx;
  line-height: 1.6;
}
.feature-section {
  margin-top: 48rpx;
  background-color: #f0f8ff;
  border-radius: 24rpx;
  padding: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}
.feature-section .feature-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 48rpx;
  position: relative;
  padding-left: 24rpx;
}
.feature-section .feature-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background-color: #007aff;
  border-radius: 8rpx;
}
.feature-section .feature-list {
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}
.feature-section .feature-list .feature-item {
  background-color: #f8f8f8;
  padding: 24rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}
.feature-section .feature-list .feature-item:hover {
  transform: translateX(8rpx);
}
.feature-section .feature-list .feature-item .item-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}
.feature-section .feature-list .feature-item .item-header .item-number {
  font-size: 26rpx;
  font-weight: 600;
  color: #007aff;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}
.feature-section .feature-list .feature-item .item-header .item-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}
.feature-section .feature-list .feature-item .item-desc {
  color: #999;
  font-size: 30rpx;
  line-height: 1.6;
  padding-left: 56rpx;
}