.translation {
  padding: 24rpx;
  max-width: 900rpx;
  margin: 0 auto;
}
.translation .input-section .input-area {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  transition: all 0.3s ease;
}
.translation .input-section .input-area:focus {
  border-color: #4f46e5;
  box-shadow: 0 0 0 2rpx rgba(79, 70, 229, 0.1);
}
.translation .input-section .btn-group {
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
  gap: 24rpx;
}
.translation .base-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}
.translation .base-btn .iconify {
  font-size: 32rpx;
}
.translation .base-btn:active {
  transform: scale(0.98);
}
.translation .clear-btn {
  flex: 1;
  background-color: #f4f4f5;
  color: #71717a;
}
.translation .clear-btn:hover {
  background-color: #e4e4e7;
}
.translation .translate-btn,
.translation .copy-btn {
  flex: 1;
  background-color: #4f46e5;
  color: #fff;
}
.translation .translate-btn:hover,
.translation .copy-btn:hover {
  background-color: #4338ca;
}
.translation .result-section {
  margin-top: 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
}
.translation .result-section .result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #f1f5f9;
  background-color: #f8fafc;
}
.translation .result-section .result-header .result-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #475569;
  font-weight: 500;
}
.translation .result-section .result-header .icon-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 64rpx;
  border-radius: 8rpx;
  color: #64748b;
  background-color: #fff;
  border: 2rpx solid #e2e8f0;
  transition: all 0.2s ease;
}
.translation .result-section .result-header .icon-btn:active {
  transform: scale(0.95);
  background-color: #f8fafc;
}
.translation .result-section .result-header .icon-btn .copy-icon {
  font-size: 36rpx;
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.translation .result-section .result-content {
  font-size: 30rpx;
  line-height: 1.8;
  padding: 32rpx;
  color: #1e293b;
  white-space: pre-wrap;
  word-wrap: break-word;
}
.translation .loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  color: #64748b;
}
.translation .loading .loading-icon {
  font-size: 36rpx;
  animation: spin 1s linear infinite;
}
@keyframes spin {
from {
    transform: rotate(0deg);
}
to {
    transform: rotate(360deg);
}
}