.container {
  padding: 20px;
  background-color: #f0f8ff;
  min-height: 100vh;
  height: 100vh;
  color: #333333;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 20px;
  box-sizing: border-box;
}
.date-time {
  display: flex;
  flex-direction: column;
  gap: 5px;
}
.date,
.time {
  font-size: 16px;
  color: #1890ff;
}
.weather {
  font-size: 16px;
  display: flex;
  align-items: center;
  color: #1890ff;
  gap: 4rpx;
}
.weather .location-icon {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  fill: #1890ff;
  transition: fill 0.3s ease;
}
.weather .location-icon:hover {
  fill: #0076e4;
}
.weather text {
  line-height: 36rpx;
}
.status-container {
  text-align: center;
  margin: 30rpx 0;
}
.status-container .status-text {
  font-size: 32rpx;
  color: #666666;
  margin-bottom: 20rpx;
}
.status-container .status-result {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  font-family: "Courier New", Courier, monospace;
  letter-spacing: 1px;
}
.todo-list-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 70vh;
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  background-color: #f0f8ff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 20px;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.todo-list-container.init {
  transition: none;
}
.todo-list-container.show {
  transform: translateY(10%);
}
.custom-dialog {
  background: #fff;
  width: 600rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
.custom-dialog .dialog-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #eee;
}
.custom-dialog .dialog-header .dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.custom-dialog .dialog-content {
  padding: 30rpx;
}
.custom-dialog .dialog-content .input-group {
  margin-bottom: 20rpx;
}
.custom-dialog .dialog-content .input-group .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}
.custom-dialog .dialog-content .input-group .input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.custom-dialog .dialog-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}
.custom-dialog .dialog-footer .btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  background: none;
}
.custom-dialog .dialog-footer .btn.cancel {
  color: #666;
  border-right: 1rpx solid #eee;
}
.custom-dialog .dialog-footer .btn.confirm {
  color: #007aff;
}
.custom-dialog .dialog-footer .btn:active {
  background-color: #f5f5f5;
}
.weekday-selector {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}
.weekday-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 24rpx;
  background-color: #f5f5f5;
  color: #666;
  transition: all 0.3s ease;
}
.weekday-item.active {
  background-color: #007aff;
  color: #fff;
}
.picker-value {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}
.input,
picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  font-size: 28rpx;
}
@keyframes numberPulse {
0% {
    transform: scale(1);
}
50% {
    transform: scale(1.05);
}
100% {
    transform: scale(1);
}
}
.number-animate {
  animation: numberPulse 0.5s ease-in-out;
}