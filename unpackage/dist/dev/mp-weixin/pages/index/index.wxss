.home {
  padding: 30rpx 20rpx;
  background: #f6f7f9;
  min-height: 100vh;
}
.home .news-list .news-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}
.home .news-list .news-item-expanded {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}
.home .news-list .news-item .news-content {
  display: flex;
  gap: 20rpx;
}
.home .news-list .news-item .rank-column {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
  padding-top: 6rpx;
}
.home .news-list .news-item .rank-column .rank {
  font-size: 32rpx;
  font-weight: 600;
  color: #999;
}
.home .news-list .news-item .rank-column .rank.top-three {
  color: #ff4444;
}
.home .news-list .news-item .rank-column .expand-btn {
  padding: 8rpx;
  margin-top: 10rpx;
}
.home .news-list .news-item .rank-column .expand-btn .expand-icon {
  display: block;
  color: #999;
  font-size: 24rpx;
  transition: transform 0.3s ease;
}
.home .news-list .news-item .rank-column .expand-btn .expand-icon.expanded {
  transform: rotate(180deg);
}
.home .news-list .news-item .news-main {
  flex: 1;
  display: flex;
  gap: 20rpx;
}
.home .news-list .news-item .news-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.home .news-list .news-item .news-text .news-title {
  font-size: 30rpx;
  line-height: 1.5;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.home .news-list .news-item .news-text .news-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}
.home .news-list .news-item .news-text .news-info .hot-score {
  color: #ff4444;
  font-size: 26rpx;
  font-weight: 500;
}
.home .news-list .news-item .news-text .news-info .hot-tag-img {
  width: 32rpx;
  height: 32rpx;
}
.home .news-list .news-item .news-image {
  width: 180rpx;
  height: 140rpx;
  border-radius: 12rpx;
  object-fit: cover;
}
.home .news-list .news-item .news-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-top: 20rpx;
}
.home .loading {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}