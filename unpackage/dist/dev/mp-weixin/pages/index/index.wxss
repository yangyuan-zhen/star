.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
  max-width: 100%;
  overflow-x: hidden;
}
.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.nav-bar .title-section {
  display: flex;
  align-items: center;
}
.nav-bar .title-section .icon-star {
  color: #6366f1;
  font-size: 40rpx;
  margin-right: 10rpx;
}
.nav-bar .title-section .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #6366f1;
}
.nav-bar .action-section {
  display: flex;
  gap: 30rpx;
}
.nav-bar .action-section .icon-user,
.nav-bar .action-section .icon-settings {
  font-size: 40rpx;
  color: #666;
}
.content-area {
  flex: 1;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  width: 100%;
}
.zodiac-card {
  background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
  border-radius: 24rpx;
  overflow: hidden;
  margin: 0 4rpx 40rpx 4rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  width: calc(100% - 8rpx);
  box-sizing: border-box;
}
.zodiac-card .zodiac-header {
  padding: 30rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date .zodiac-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-name-date .zodiac-date {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 16rpx;
  border-radius: 100rpx;
}
.zodiac-card .zodiac-header .zodiac-fortune {
  margin-bottom: 20rpx;
}
.zodiac-card .zodiac-header .zodiac-fortune .fortune-label {
  font-size: 28rpx;
  display: block;
  margin-bottom: 8rpx;
}
.zodiac-card .zodiac-header .zodiac-description {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}
.zodiac-card .zodiac-header .tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}
.zodiac-card .zodiac-header .tag-container .tag {
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
}
.zodiac-card .zodiac-image-section {
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  position: relative;
  background-color: rgba(0, 0, 0, 0.1);
}
.zodiac-card .zodiac-image-section::before {
  content: "";
  position: absolute;
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  z-index: 0;
}
.zodiac-card .zodiac-image-section .zodiac-image {
  position: relative;
  z-index: 1;
  width: 100rpx;
  height: 100rpx;
  filter: brightness(0) invert(1);
  opacity: 0.9;
}
.star-rating {
  color: #f59e0b;
  font-size: 36rpx;
  line-height: 1;
}
.star-rating.small {
  font-size: 30rpx;
}
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.fortune-detail-section {
  margin-bottom: 40rpx;
}
.fortune-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.fortune-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 4rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
  width: calc(100% - 8rpx);
  box-sizing: border-box;
}
.fortune-card:active {
  transform: translateY(-5rpx);
}
.fortune-card .card-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}
.fortune-card .card-header .card-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}
.fortune-card .card-header .card-icon.love-icon {
  background-color: #fee2e2;
  color: #ef4444;
}
.fortune-card .card-header .card-icon.career-icon {
  background-color: #dbeafe;
  color: #3b82f6;
}
.fortune-card .card-header .card-icon.wealth-icon {
  background-color: #fef3c7;
  color: #f59e0b;
}
.fortune-card .card-header .card-icon.health-icon {
  background-color: #dcfce7;
  color: #22c55e;
}
.fortune-card .card-header .card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.fortune-card .card-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-top: 12rpx;
  padding-right: 10rpx;
}
.daily-tips-section {
  margin-bottom: 40rpx;
}
.tips-container {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin: 0 4rpx;
  width: calc(100% - 8rpx);
  box-sizing: border-box;
}
.tips-group {
  padding: 24rpx;
}
.tips-group:not(:last-child) {
  border-bottom: 2rpx solid #f5f5f5;
}
.tips-group .tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.tips-group .tips-header .tips-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  font-size: 24rpx;
}
.tips-group .tips-header .tips-icon.good {
  background-color: #dcfce7;
  color: #22c55e;
}
.tips-group .tips-header .tips-icon.bad {
  background-color: #fee2e2;
  color: #ef4444;
}
.tips-group .tips-header .tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
.tips-list {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}
.tip-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.tip-item .tip-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.tip-item .tip-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 50rpx 0;
}
.loading-container .loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
.loading-container .loading-text {
  color: #fff;
  margin-top: 20rpx;
  font-size: 28rpx;
}
@keyframes spin {
0% {
    transform: rotate(0deg);
}
100% {
    transform: rotate(360deg);
}
}