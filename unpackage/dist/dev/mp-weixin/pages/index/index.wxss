.home {
  padding: 20rpx;
}
.home .news-list .news-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}
.home .news-list .news-item .news-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.home .news-list .news-item .news-content .news-text {
  flex: 1;
}
.home .news-list .news-item .news-content .news-text .news-title {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: flex;
  gap: 10rpx;
}
.home .news-list .news-item .news-content .news-text .news-title .rank {
  color: #ff4444;
  font-weight: bold;
}
.home .news-list .news-item .news-content .news-text .news-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}
.home .news-list .news-item .news-content .news-text .news-info .hot-score {
  color: #ff4444;
  font-size: 24rpx;
}
.home .news-list .news-item .news-content .news-text .news-info .hot-tag-img {
  width: 32rpx;
  height: 32rpx;
}
.home .news-list .news-item .news-content .news-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 8rpx;
}
.home .loading {
  text-align: center;
  padding: 20rpx;
  color: #999;
}