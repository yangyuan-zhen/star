<view class="note-container"><view class="header"><text class="title">我的备忘录</text><text class="subtitle">本周剩余可添加: {{a}}</text></view><view class="notes-list"><view wx:for="{{b}}" wx:for-item="note" wx:key="e" class="note-item"><view class="note-content"><text>{{note.a}}</text><text class="note-date">{{note.b}}</text></view><view class="note-actions"><button bindtap="{{note.c}}" class="btn edit">编辑</button><button bindtap="{{note.d}}" class="btn delete">删除</button></view></view></view><button bindtap="{{c}}" class="add-btn" disabled="{{d}}"> 添加备忘 </button><view wx:if="{{e}}" class="modal"><view class="modal-content"><block wx:if="{{r0}}"><textarea placeholder="请输入备忘内容" class="note-input" maxlength="{{1000}}" show-confirm-bar="false" value="{{f}}" bindinput="{{g}}"/></block><view class="word-count">{{h}}/1000</view><view class="modal-btns"><button bindtap="{{i}}" class="btn cancel">取消</button><button bindtap="{{j}}" class="btn save">保存</button></view></view></view></view>